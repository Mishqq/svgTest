.ng-diagramm,
[ng-diagramm],
ng-diagramm
	ul, li
		margin 0
		padding 0
		list-style none

	.svg
		position relative
		width 500px
		height 500px
		overflow hidden

		&__label-list
			transition: all .5s ease-in
			&-item
				position absolute
				width 100px
				height 70px
				border-radius 5px

		.label
			color #fff
			text-align center
			opacity 0
			transition: all .5s ease-in
			&_show
				opacity 1
			&__val
				strong
					font-size 20px
			&__text
				font-size 13px

	svg
		background-color #16314c
	path
		border none
		outline none
		opacity .9
		&:focus, &:active
			border none
			outline none !important
	circle
		opacity .5