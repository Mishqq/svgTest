html, body
	background-color #fff

*
	list-style none
	margin 0
	padding 0

.container-fluid
	width 1200px

.top-menu
	margin 15px 0
	&__item
		margin 0 20px
		display inline-block
		cursor pointer
		& span:focus
			outline none

.edit-list
	&__item
		position relative
		padding 10px 30px 0
		width 250px
	&__data
		span
			position absolute
			display inline-block
			width 50px
			text-align center
		span:nth-child(1)
			left 0
			top 20px
			text-align left
		span:nth-child(2)
			left 50%
			top 0
			margin-left -25px
		span:nth-child(3)
			right 0
			top 20px
			text-align right

